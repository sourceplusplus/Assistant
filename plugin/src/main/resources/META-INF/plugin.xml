<idea-plugin>
    <id>com.sourceplusplus.plugin.intellij</id>
    <name>Source++</name>
    <vendor email="support@sourceplusplus.com" url="https://github.com/sourceplusplus">Source++</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.xdebugger</depends>
    <depends optional="true" config-file="withJava.xml">com.intellij.modules.java</depends>
    <depends optional="true" config-file="withGroovy.xml">org.intellij.groovy</depends>
    <depends optional="true" config-file="withKotlin.xml">org.jetbrains.kotlin</depends>
    <depends optional="true" config-file="withPython.xml">com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService
                serviceImplementation="spp.jetbrains.sourcemarker.service.instrument.breakpoint.BreakpointHitWindowService"/>
        <editor.linePainter
                implementation="spp.jetbrains.sourcemarker.service.instrument.breakpoint.painter.VariableEditorLinePainter"/>
        <applicationConfigurable
                instance="spp.jetbrains.sourcemarker.settings.SourceMarkerConfigurable"
                groupId="tools"
                id="Source++"
                displayName="Source++"/>
        <postStartupActivity
                implementation="spp.jetbrains.sourcemarker.activities.PluginSourceMarkerStartupActivity"/>

        <errorHandler implementation="spp.jetbrains.sourcemarker.reporting.GitHubErrorReporter"/>

        <projectService
                serviceImplementation="spp.jetbrains.sourcemarker.console.SourceMarkerConsoleService"/>
        <toolWindow id="Source++ Console"
                    factoryClass="spp.jetbrains.sourcemarker.console.SourceMarkerToolWindowFactory"/>

        <applicationService serviceImplementation="liveplugin.implementation.Settings"/>
        <scratch.rootType implementation="liveplugin.implementation.ScratchLivePluginRootType"/>
        <nonProjectFileWritingAccessExtension implementation="liveplugin.implementation.MakePluginFilesAlwaysEditable"/>
        <syntaxHighlighter factoryClass="liveplugin.implementation.EnableSyntaxHighlighterInLivePlugins" order="first"/>
        <indexedRootsProvider implementation="liveplugin.implementation.IndexSetContributor"/>
        <usageTypeProvider implementation="liveplugin.implementation.UsageTypeExtension" order="last"/>
        <useScopeEnlarger implementation="liveplugin.implementation.UseScopeExtension"/>
        <createDirectoryCompletionContributor implementation="liveplugin.implementation.LivePluginDirectoryCompletionContributor"/>
        <intentionAction>
            <className>liveplugin.implementation.pluginrunner.AddToClassPathGroovyIntention</className>
            <category>LivePlugin</category>
        </intentionAction>
        <intentionAction>
            <className>liveplugin.implementation.pluginrunner.AddPluginDependencyGroovyIntention</className>
            <category>LivePlugin</category>
        </intentionAction>
        <intentionAction>
            <className>liveplugin.implementation.pluginrunner.AddToClassPathKotlinIntention</className>
            <category>LivePlugin</category>
        </intentionAction>
        <intentionAction>
            <className>liveplugin.implementation.pluginrunner.AddPluginDependencyKotlinIntention</className>
            <category>LivePlugin</category>
        </intentionAction>
    </extensions>

    <applicationListeners>
        <listener class="liveplugin.implementation.LivePluginProjectListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
        <listener class="liveplugin.implementation.LivePluginDeletedListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

    <projectListeners>
        <listener class="spp.jetbrains.marker.plugin.FileActivityListener"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </projectListeners>

    <actions>
        <action id="spp.jetbrains.sourcemarker.command.ControlBarAction"
                class="spp.jetbrains.sourcemarker.command.ControlBarAction"
                text="SourceCommand Action" description="Source command action">
            <keyboard-shortcut first-keystroke="control shift S" keymap="$default"/>
        </action>
        <action id="spp.jetbrains.marker.plugin.SourceMarkerVisibilityAction"
                class="spp.jetbrains.marker.plugin.SourceMarkerVisibilityAction"
                text="SourceMarkVisibility Action" description="SourceMark visibility action">
            <keyboard-shortcut first-keystroke="control shift D" keymap="$default"/>
        </action>
        <action id="com.sourceplusplus.marker.source.mark.SourceMarkPopupAction"
                class="spp.jetbrains.marker.source.mark.SourceMarkPopupAction"
                text="SourcePortal Popup Action" description="SourcePortal popup action">
        </action>

        <action id="LivePlugin.RunPlugin" class="liveplugin.implementation.actions.RunPluginAction" text="Run Current Plugin">
            <keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt e"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control shift l"/>
        </action>
        <action id="LivePlugin.UnloadPlugin" class="liveplugin.implementation.actions.UnloadPluginAction" text="Unload Current Plugin"/>
        <group id="LivePlugin.LivePluginActions" class="liveplugin.implementation.actions.RunLivePluginsGroup">
            <add-to-group group-id="RunContextGroup"/>
        </group>
    </actions>
</idea-plugin>
